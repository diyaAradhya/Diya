

function setup() {
  createCanvas(2000,1000);
  background(0);
  

}

function draw() 
{
  

  if (keyIsDown(RIGHT_ARROW)) 
  {
    background("red");
    
  }

    if (keyIsDown(LEFT_ARROW)) 
  {
    background("blue");
    
  }
 
    if (keyIsDown(UP_ARROW)) 
  {
    background("yellow");
   
  }

  if (keyIsDown(DOWN_ARROW)) 
  {
    background("green");

  
  }

  drawSprites();
}




